{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["shared#build"]
    },
    "test:coverage": {
      "dependsOn": ["shared#build"]
    },
    "test:ui": {
      "dependsOn": ["shared#build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "biome:check": {
      "cache": false
    }
  }
}
